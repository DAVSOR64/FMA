<odoo>
  <data>

    <record id="view_picking_form_custom_retard" model="ir.ui.view">
      <field name="name">stock.picking.form.custom.retard</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">

        <!-- Ajoute un onglet dédié -->
        <xpath expr="//notebook" position="inside">
          <page string="Motif de retard">
            <group>
              <field name="so_retard_motif_level1_id"/>
              <field name="so_retard_motif_level2_id"
                     domain="[('category_id', '=', so_retard_motif_level1_id)]"/>
            </group>
          </page>
        </xpath>

      </field>
    </record>

  </data>
</odoo>
