<odoo>
    <data>

        <record id="view_sale_delay_reason_tree" model="ir.ui.view">
            <field name="name">sale.delay.reason.tree</field>
            <field name="model">sale.delay.reason</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="parent_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_sale_delay_reason_form" model="ir.ui.view">
            <field name="name">sale.delay.reason.form</field>
            <field name="model">sale.delay.reason</field>
            <field name="arch" type="xml">
                <form string="Motif de retard">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="level"/>
                            <!-- Parent uniquement quand level = 2 -->
                            <field name="parent_id" invisible="level != '2'"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sale_delay_reason" model="ir.actions.act_window">
            <field name="name">Motifs de retard</field>
            <field name="res_model">sale.delay.reason</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sale_delay_reason_root"
                  name="Motifs de retard"
                  parent="sale.menu_sale_config"
                  action="action_sale_delay_reason"/>

    </data>
</odoo>
