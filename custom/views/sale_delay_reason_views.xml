<odoo>
  <data>

    <!-- ===================== Catégories ===================== -->
    <record id="view_sale_delay_category_tree" model="ir.ui.view">
      <field name="name">sale.delay.category.tree</field>
      <field name="model">sale.delay.category</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record id="view_sale_delay_category_form" model="ir.ui.view">
      <field name="name">sale.delay.category.form</field>
      <field name="model">sale.delay.category</field>
      <field name="arch" type="xml">
        <form string="Motif de retard">
          <sheet>
            <group>
              <field name="name"/>
              <field name="active"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_sale_delay_category" model="ir.actions.act_window">
      <field name="name">Motifs de retard</field>
      <field name="res_model">sale.delay.category</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- ===================== Désignations ===================== -->
    <record id="view_sale_delay_reason_tree" model="ir.ui.view">
      <field name="name">sale.delay.reason.tree</field>
      <field name="model">sale.delay.reason</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="category_id"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record id="view_sale_delay_reason_form" model="ir.ui.view">
      <field name="name">sale.delay.reason.form</field>
      <field name="model">sale.delay.reason</field>
      <field name="arch" type="xml">
        <form string="Désignation du motif de retard">
          <sheet>
            <group>
              <field name="name"/>
              <field name="category_id"/>
              <field name="active"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_sale_delay_reason" model="ir.actions.act_window">
      <field name="name">Désignations (motifs)</field>
      <field name="res_model">sale.delay.reason</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- ===================== Menus Ventes / Configuration ===================== -->
    <menuitem id="menu_sale_delay_root"
              name="Motifs de retard"
              parent="sale.menu_sale_config"
              sequence="210"/>

    <menuitem id="menu_sale_delay_category"
              name="Motifs"
              parent="menu_sale_delay_root"
              action="action_sale_delay_category"
              sequence="10"/>

    <menuitem id="menu_sale_delay_reason"
              name="Désignations"
              parent="menu_sale_delay_root"
              action="action_sale_delay_reason"
              sequence="20"/>

  </data>
</odoo>
