<odoo>
    <record id="view_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Ajout après les détails du partenaire -->
            <xpath expr="//sheet//group[@name='partner_details']" position="after">
                <group string="Chronologie">
                    
                    <label for="so_date_de_reception_devis" string="Demande reçue le :" style="color:blue;"/>
                    <field name="so_date_de_reception_devis" nolabel="1"/>
                    
                    <label for="so_date_du_devis" string="Devis fait le :" style="color:blue;"/>
                    <field name="so_date_du_devis" nolabel="1"/>
                    
                    <label for="so_date_de_modification_devis" string="Devis modifié le :" style="color:blue;"/>
                    <field name="so_date_de_modification_devis" nolabel="1"/>
                    
                    <label for="so_date_devis_valide" string="Devis validé le :" style="color:blue;"/>
                    <field name="so_date_devis_valide" nolabel="1"/>
                    
                    <label for="so_date_ARC" string="ARC du :" style="color:green;"/>
                    <field name="so_date_ARC" nolabel="1"/>
                    
                    <label for="so_date_bpe" string="BPE du :" style="color:green;"/>
                    <field name="so_date_bpe" nolabel="1"/>
                    
                    <label for="so_date_bon_pour_fab" string="Bon pour Fab. le :" style="color:orange;"/>
                    <field name="so_date_bon_pour_fab" nolabel="1"/>
                    
                    <label for="so_date_de_fin_de_production_reel" string="Fin de production du :" style="color:orange;"/>
                    <field name="so_date_de_fin_de_production_reel" nolabel="1"/>

                    <label for="so_date_de_livraison" string="Date de livraison prévue :" style="color:orange;"/>
                    <field name="so_date_de_livraison" nolabel="1"/>
                    
                    <label for="so_date_de_livraison_prevu" string="Date de livraison :" style="color:orange;"/>
                    <field name="so_date_de_livraison_prevu" nolabel="1"/>

                </group>
                
                <!-- Autres groupes -->
                <group string="Informations principales">
                    <field name="so_commercial"/>
                    <field name="so_commande_client"/>
                    <label for="so_gamme" string="GAMME :" style="color:blue;"/>
                    <field name="so_gamme" nolabel="1"/>
                    <label for="so_serie" string="SERIE :" style="color:blue;"/>
                    <field name="so_serie" nolabel="1"/>
                    <field name="so_statut_avancement_production"/>
                    <field name="so_delai_confirme_en_semaine"/>
                </group>
            </xpath>

            <!-- Exemple pour ajouter les pages existantes -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Analyse Financière">
                    <group>
                        <group string="Chiffres Devis">
                            <field name="so_achat_matiere_devis"/>
                            <field name="so_achat_vitrage_devis"/>
                            <field name="so_cout_mod_devis"/>
                            <field name="so_mtt_facturer_devis"/>
                            <field name="so_marge_brute_devis"/>
                            <field name="so_prc_marge_brute_devis" widget="gauge" options="{'min': 0, 'max': 100, 'field_color': 'red'}"/>
                            <field name="so_mcv_devis"/>
                            <field name="so_prc_mcv_devis" widget="progressbar"/>
                        </group>
                        <group string="Chiffres B.E.">
                            <field name="so_achat_matiere_be"/>
                            <field name="so_achat_vitrage_be"/>
                            <field name="so_cout_mod_be"/>
                            <field name="so_mtt_facturer_be"/>
                            <field name="so_marge_brute_be"/>
                            <field name="so_prc_marge_brute_be" widget="gauge" options="{'min': 0, 'max': 100, 'field_color': 'red'}"/>
                            <field name="so_mcv_be"/>
                            <field name="so_prc_mcv_be" widget="progressbar"/>
                        </group>
                        <group string="Chiffres Réel">
                            <field name="so_achat_matiere_reel"/>
                            <field name="so_achat_vitrage_reel"/>
                            <field name="so_cout_mod_reel"/>
                            <field name="so_mtt_facturer_reel"/>
                            <field name="so_marge_brute_reel"/>
                            <field name="so_prc_marge_brute_reel" widget="gauge" options="{'min': 0, 'max': 100, 'field_color': 'red'}"/>
                            <field name="so_mcv_reel"/>
                            <field name="so_prc_mcv_reel" widget="progressbar"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
