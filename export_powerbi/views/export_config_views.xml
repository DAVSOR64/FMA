<odoo>
    <record id="view_export_sftp_config_form" model="ir.ui.view">
        <field name="name">export.sftp.config.form</field>
        <field name="model">export.sftp.config</field>
        <field name="arch" type="xml">
            <form string="Configuration SFTP">
                <sheet>
                    <group>
                        <field name="host"/>
                        <field name="port"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                        <field name="path"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_export_sftp_config" model="ir.actions.act_window">
        <field name="name">Configuration SFTP</field>
        <field name="res_model">export.sftp.config</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_export_powerbi_root" name="Export PowerBI"/>
    <menuitem id="menu_export_powerbi_config" name="Configuration SFTP" parent="menu_export_powerbi_root" action="action_export_sftp_config"/>
</odoo>
