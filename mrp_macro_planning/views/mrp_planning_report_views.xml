<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_planning_slot_report_view_pivot" model="ir.ui.view">
        <field name="name">planning.slot.report.pivot</field>
        <field name="model">mrp.planning.analysis.report</field>
        <field name="arch" type="xml">
            <pivot string="Planning Analysis" sample="1" disable_linking="True">
                <field name="day" interval="day" type="col"/>
                <field name="workcenter_id" type="row"/>
                <field name="is_shortage"/>
                <field name="availability" type="measure"/>
                <field name="needed" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="mrp_planning_report_action_analysis" model="ir.actions.act_window">
        <field name="name">Planning Analysis</field>
        <field name="res_model">mrp.planning.analysis.report</field>
        <field name="view_mode">pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No data yet!
            </p><p>
                Analyze the allocation of your resources across roles, projects, and manufacture, and estimate future needs.
            </p>
        </field>
    </record>

    <menuitem
        id="mrp_planning_menu_planning_analysis"
        name="Planning Analysis"
        action="mrp_planning_report_action_analysis"
        sequence="10" parent="mrp.menu_mrp_reporting"
        />

</odoo>
