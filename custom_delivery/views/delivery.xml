<odoo>
    <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
        <!-- Structure en deux colonnes avec du flexbox -->
        <xpath expr="//div[contains(@class, 'page')]" position="replace">
            <div class="header_table" style="display: flex; justify-content: space-between;">
                <!-- Bloc de la société FMA-F2M -->
                <div class="company_info" style="flex: 1;">
                    <strong t-field="o.company_id.name" /><br />
                    <span t-field="o.company_id.street" /><br />
                    <span t-field="o.company_id.zip" /> <span t-field="o.company_id.city" /><br />
                    Tél: <span t-field="o.company_id.phone" /><br />
                    Email: <span t-field="o.company_id.email" />
                </div>
                <!-- Bloc des informations de livraison aligné à droite -->
                <div class="delivery_info" style="flex: 1; text-align: right;">
                    <strong class="bold_text">BON DE LIVRAISON</strong><br />
                    N°: <span t-field="o.name" /><br />
                    <br />
                    Adresse de livraison:<br />
                    <span t-field="o.partner_id.name" /><br />
                    <span t-field="o.partner_id.street" /><br />
                    <span t-field="o.partner_id.zip" />
                    <span t-field="o.partner_id.city" /><br />
                    Contact: <span t-field="o.user_id.name" />
                    <span t-field="o.user_id.phone" />
                </div>
            </div>
            
            <!-- Table des mouvements de stock -->
            <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Description</th>
                        <th>Dimensions (L x H)</th>
                        <th>Quantité</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Boucle à travers les lignes de mouvement de stock -->
                    <tr t-foreach="o.move_ids_without_package" t-as="line">
                        <td>
                            <!-- Référence du produit -->
                            <span t-field="line.product_id.default_code" />
                        </td>
                        <td>
                            <!-- Description -->
                            <span t-field="line.name" />
                        </td>
                        <td>
                            <!-- Dimensions -->
                            <span t-field="line.x_studio_largeur_mm_1" />
                            <span t-field="line.x_studio_hauteur_mm_1" />
                        </td>
                        <td>
                            <!-- Quantité -->
                            <span t-field="line.product_uom_qty" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
