<odoo>
    <record id="view_picking_form_inherit_custom" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter un nouvel onglet Ã  la fin du notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Info Colisage">
                    <group>
                        <field name="so_acces_bl"/>
                        <field name="so_type_camion_bl"/>
                        <field name="so_horaire_ouverture_bl" widget="float_time" string="Horaire ouverture"/>
                        <field name="so_horaire_fermeture_bl" widget="float_time" string="Horaire fermeture"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
