<odoo>
  <!-- LISTE des commandes : ajoute la colonne HT -->
  <record id="view_order_tree_inherit_amount_to_invoice_ht" model="ir.ui.view">
    <field name="name">sale.order.tree.amount_to_invoice_ht</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_quotation_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree/field[@name='amount_total']" position="after">
        <field name="amount_to_invoice_ht" optional="show"/>
      </xpath>
    </field>
  </record>

  <!-- PIVOT personnalisé sur sale.order (pas d'héritage) -->
  <record id="view_order_pivot_amount_to_invoice_ht" model="ir.ui.view">
    <field name="name">sale.order.pivot.amount_to_invoice_ht</field>
    <field name="model">sale.order</field>
    <field name="arch" type="xml">
      <pivot string="Commandes (pivot)">
        <!-- Dimensions usuelles : adapte si besoin -->
        <field name="company_id" type="row"/>
        <field name="partner_id" type="row"/>
        <field name="date_order" type="col" interval="month"/>

        <!-- Mesures -->
        <field name="amount_to_invoice_ht" type="measure"/>
        <field name="amount_total" type="measure"/>
      </pivot>
    </field>
  </record>
</odoo>
