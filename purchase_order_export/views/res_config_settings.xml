<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_purchase_order_export" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.order.export</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name=('matrix_setting_container')]" position="after">
                <h2>FTP Server Configuration (Purchase Order Export)</h2>
                <div class="row mt16 o_settings_container" name="ftp_server_configurations_container">
                    <div class="col-12 col-lg-6">
                        <div class="row mb8">
                            <div class="col-5">
                                <label for="ftp_server_host" string="FTP Server Host"/>
                                <div class="text-muted">Enter the host address of the FTP server.</div>
                            </div>
                            <div class="col-7">
                                <field name="ftp_server_host"/>
                            </div>
                        </div>
                        <div class="row mb8">
                            <div class="col-5">
                                <label for="ftp_server_username" string="FTP Server Username"/>
                                <div class="text-muted">Enter the username for the FTP server.</div>
                            </div>
                            <div class="col-7">
                                <field name="ftp_server_username"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="row mb8">
                            <div class="col-5">
                                <label for="ftp_server_password" string="FTP Server Password"/>
                                <div class="text-muted">Enter the password for the FTP server.</div>
                            </div>
                            <div class="col-7">
                                <field name="ftp_server_password"/>
                            </div>
                        </div>
                        <div class="row mb8">
                            <div class="col-5">
                                <label for="ftp_server_file_path" string="FTP Server File Path"/>
                                <div class="text-muted">Specify the file path on the FTP server.</div>
                            </div>
                            <div class="col-7">
                                <field name="ftp_server_file_path"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
