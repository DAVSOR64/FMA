<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cron_mrp_capacity_recompute" model="ir.cron">
        <field name="name">MRP Capacité — Recalcul absences quotidien</field>
        <field name="model_id" ref="model_mrp_capacity_week"/>
        <field name="state">code</field>
        <field name="code">model.cron_recompute_absences()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 06:00:00')"/>
    </record>

</odoo>
