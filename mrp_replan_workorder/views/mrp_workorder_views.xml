<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_workorder_tree_inherit_macro" model="ir.ui.view">
        <field name="name">mrp.production.workorder.tree.inherit.macro_planned_start</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_view"/>
        <field name="arch" type="xml">

            <!-- Ajoute la colonne dans l'onglet "Ordres de travail" de l'OF -->
            <xpath expr="//tree//field[@name='name']" position="after">
                <field name="macro_planned_start"/>
            </xpath>

        </field>
    </record>
    <record id="mrp_workorder_tree_inherit_macro_global" model="ir.ui.view">
        <field name="name">mrp.workorder.tree.inherit.macro.global</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="after">
                <field name="macro_planned_start"/>
            </xpath>
        </field>
    </record>
</odoo>
